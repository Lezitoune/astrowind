---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'josefin-sans';
    --aw-font-serif: 'josefin-sans';
    --aw-font-heading: 'josefin-sans';

    /* --aw-color-primary: rgb(1 97 239); */
    --aw-color-primary: rgb(255, 0, 0);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    /* Footer coler */
    /* --aw-color-bg-page-dark: rgb(3 6 32); */
    --aw-color-bg-page-dark: rgb(34, 34, 34);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'josefin-sans';
    --aw-font-serif: 'josefin-sans';
    --aw-font-heading: 'josefin-sans';

    /* Button color */
    /* --aw-color-primary: rgb(1 97 239); */
    --aw-color-primary: rgb(176, 116, 24);

    /* Button hover color */
    /* --aw-color-secondary: rgb(1 84 207); */
    --aw-color-secondary: rgb(203, 161, 53);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    
    /* Page color */
    /* --aw-color-bg-page: rgb(3 6 32); */
    --aw-color-bg-page: rgb(34, 34, 34);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
