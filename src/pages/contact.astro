---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Prenons contact !" />

  <ContactUs
    id="form"
    title="Envoyez-moi un message dès aujourd'hui !"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Courriel',
      },
      {
        type: 'tel',
        name: 'telephone',
        label: 'Téléphone',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'En soumettant ce formulaire de contact, vous reconnaissez et acceptez la collecte de vos informations personnelles.',
    }}
    description="Je réponds répond généralement dans les 24 heures ouvrables."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Au plaisir"
    items={[
      {
        title: 'Téléphone',
        description: '+33 (0)6 17 85 02 58',
        icon: 'tabler:headset',
      },
      {
        title: 'Courriel',
        description: 'contact@oliviernuber.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Adresse',
        description: '2 rue du Chapitre 30000 Nîmes France',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
